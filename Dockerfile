FROM node:18-alpine

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Скопируйте package.json и package-lock.json в рабочую директорию
COPY package*.json ./

# Установите зависимости
RUN npm install

# Скопируйте все файлы проекта в рабочую директорию
COPY . .

# Соберите статические файлы проекта
RUN npm run build

# Укажите порт, который будет прослушивать контейнер
EXPOSE 3000

# Запустите команду для запуска вашего приложения
CMD ["npm", "start"]